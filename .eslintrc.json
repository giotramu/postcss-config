{
  "extends": ["@giotramu/eslint-config", "@giotramu/eslint-config/typescript"],
  "parserOptions": {
    "project": ["./tsconfig.test.json"]
  },
  "rules": {
    "@typescript-eslint/ban-types": [
      "error",
      {
        "types": {
          "{}": false
        },
        "extendDefaults": true
      }
    ]
  },
  "overrides": [
    {
      "files": ["*.spec.ts*"],
      "rules": {
        "@typescript-eslint/ban-ts-comment": "off"
      }
    }
  ]
}
