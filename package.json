{
  "name": "@giotramu/postcss-config",
  "version": "2.0.0",
  "description": "Flexible PostCSS config with great defaults.",
  "author": "Giovanni Tramutola <gtramutola@mail.com>",
  "homepage": "https://github.com/giotramu/postcss-config#readme",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/giotramu/postcss-config.git"
  },
  "bugs": {
    "url": "https://github.com/giotramu/postcss-config/issues"
  },
  "engines": {
    "node": ">=10.18",
    "npm": ">=6.13"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "*.md",
    "LICENSE"
  ],
  "scripts": {
    "precheck:config": "npm run build",
    "check:config": "postcss ./examples/styles.scss --dir=examples/ --ext=min.css --verbose",
    "check:src": "tsc --noEmit",
    "lint:src": "eslint . --ext .ts,.js",
    "pre:unit": "rimraf ./coverage",
    "unit": "jest --coverage --ci",
    "test": "npm run check:src && npm run lint:src && npm run unit",
    "prebuild": "rimraf ./dist",
    "build": "tsc --declaration",
    "prepublishOnly": "npm test && npm run build"
  },
  "dependencies": {
    "@csstools/postcss-sass": "^4.0.0",
    "cssnano": "^4.1.10",
    "cssnano-preset-advanced": "^4.0.7",
    "deepmerge": "^4.2.2",
    "postcss": "^7.0.26",
    "postcss-custom-media": "^7.0.8",
    "postcss-reporter": "^6.0.1",
    "postcss-scss": "^2.0.0"
  },
  "devDependencies": {
    "@types/jest": "^25.1.1",
    "@types/node": "^13.7.0",
    "babel-jest": "^25.1.0",
    "babel-loader": "^8.0.6",
    "eslint": "^6.8.0",
    "eslint-config-contactlab": "^4.2.2",
    "eslint-config-prettier": "^6.10.0",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "postcss-cli": "^7.1.0",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "rimraf": "^3.0.1",
    "ts-jest": "^25.1.0",
    "typescript": "^3.7.5"
  },
  "keywords": [
    "css",
    "postcss",
    "postcss-config",
    "sass",
    "scss"
  ]
}
